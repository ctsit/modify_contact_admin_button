{
    "name": "Modify Contact Admin Button",
    "namespace": "Modify_Contact_Admin_Button\\ExternalModule",
    "description": "Modify the behavior of the 'Contact REDCap Administrator' button by redirecting the user to a configurable url. The url should be provided as part of the external module configuration.",
    "permissions": [
        "redcap_every_page_top"
    ],
    "authors": [
        {
            "name": "Marly Cormar",
            "email": "marlycormar@ufl.edu",
            "institution": "University of Florida - CTSI"
        },
        {
            "name": "Tiago Bember",
            "email": "tbembersimeao@ufl.edu",
            "institution": "University of Florida - CTSI"
        },
        {
            "name": "Dileep Rajput",
            "email": "rajputd@ufl.edu",
            "institution": "University of Florida - CTSI"
        },
        {
            "name": "Philip B. Chase",
            "email": "pbc@ufl.edu",
            "institution": "University of Florida - CTSI"
        }
    ],
    "system-settings": [
        {
            "key": "contact-admin-button-url-key",
            "name": "Target URL",
            "required": true,
            "type": "text"
        },
        {
            "key": "contact-admin-button-descriptive-text",
            "name": "Please make sure you provide both a parameter name and a value. If one of the two is left blank, the url will not contain such parameter name/value.",
            "type": "descriptive"
        },
        {
            "key": "contact-admin-button-parameters-list-key",
            "name": "URL parameter name-value pairs",
            "type": "sub_settings",
            "repeatable": "true",
            "sub_settings": [
                {
                    "key": "contact-admin-button-parameter-name",
                    "name": "Name",
                    "type": "text"
                },
                {
                    "key": "contact-admin-button-parameter-value",
                    "name": "Value",
                    "type": "dropdown",
                    "choices":
                    [
                        {"value": "user_firstname", "name": "user_firstname"},
                        {"value": "user_lastname", "name": "user_lastname"},
                        {"value": "email", "name": "email"},
                        {"value": "project_id", "name": "project_id"},
                        {"value": "username", "name": "username"}
                    ]
                }
            ]
        }
    ]
}
